{
  "version": "2.0",
  
  "models": {
    "whisper-turbo": {
      "provider": "openai-whisper",
      "model_name": "turbo",
      "device": "cuda",
      "compute_type": "float16",
      "supported_tasks": ["transcribe"],
      "supported_languages": ["ja", "en"],
      "requires_stable_ts": true,
      "base_params": {
        "temperature": [0.0],
        "beam_size": 2,
        "best_of": 2
      },
      "provider_params": {
        "whisper": {
          "compression_ratio_threshold": 2.2,
          "logprob_threshold": -1.0,
          "no_speech_threshold": 0.6,
          "condition_on_previous_text": false,
          "word_timestamps": true
        }
      }
    },
    "whisper-large-v2": {
      "provider": "openai-whisper",
      "model_name": "large-v2",
      "device": "cuda",
      "compute_type": "float16",
      "supported_tasks": ["transcribe", "translate"],
      "supported_languages": ["ja", "en", "multi"],
      "requires_stable_ts": false,
      "base_params": {
        "temperature": [0.0],
        "beam_size": 2,
        "best_of": 2
      },
      "provider_params": {
        "whisper": {
          "compression_ratio_threshold": 2.2,
          "logprob_threshold": -1.0,
          "no_speech_threshold": 0.6,
          "condition_on_previous_text": false,
          "hallucination_silence_threshold": 2.0,
          "carry_initial_prompt": false,
          "word_timestamps": true
        }
      }
    },
    "whisper-large-v3": {
      "provider": "openai-whisper",
      "model_name": "large-v3",
      "device": "cuda",
      "compute_type": "float16",
      "supported_tasks": ["transcribe", "translate"],
      "supported_languages": ["ja", "en", "multi"],
      "requires_stable_ts": false,
      "base_params": {
        "temperature": [0.0],
        "beam_size": 2,
        "best_of": 2
      },
      "provider_params": {
        "whisper": {
          "compression_ratio_threshold": 2.2,
          "logprob_threshold": -1.0,
          "no_speech_threshold": 0.6,
          "condition_on_previous_text": false,
          "word_timestamps": true
        }
      }
    }
  },
  
  "provider_interfaces": {
    "openai-whisper": {
      "supported_params": [
        "temperature", "beam_size", "best_of", "patience", "length_penalty",
        "compression_ratio_threshold", "logprob_threshold", "no_speech_threshold",
        "condition_on_previous_text", "initial_prompt", "prefix", "suppress_tokens",
        "suppress_blank", "without_timestamps", "max_initial_timestamp", "fp16"
      ],
      "sensitivity_affected_params": [
        "temperature", "beam_size", "best_of", "length_penalty",
        "compression_ratio_threshold", "logprob_threshold", "no_speech_threshold"
      ],
      "requires": ["openai-whisper", "stable-whisper"],
      "backends": ["whisper", "stable-ts", "faster-whisper"]
    }
  },
  
  "vad_engines": {
    "silero-v4": {
      "provider": "silero",
      "version": "v4.0",
      "repo": "snakers4/silero-vad:v4.0",
      "default_params": {
        "threshold": 0.35,
        "min_speech_duration_ms": 200,
        "min_silence_duration_ms": 100,
        "speech_pad_ms": 30,
        "chunk_threshold": 4.0
      }
    },
    "silero-latest": {
      "provider": "silero",
      "version": "latest",
      "repo": "snakers4/silero-vad",
      "default_params": {
        "threshold": 0.35,
        "min_speech_duration_ms": 200
      }
    },
    "none": {
      "provider": "none"
    }
  },
  
  "sensitivity_profiles": {
    "conservative": {
      "description": "For noisy content - strict speech detection",
      "parameter_modifiers": {
        "temperature": [0.0],
        "beam_size": 1,
        "best_of": 1,
        "no_speech_threshold": 0.8,
        "logprob_threshold": -0.8,
        "compression_ratio_threshold": 1.8,
        "length_penalty": 1.2,
        "vad_threshold_multiplier": 1.43,
        "min_speech_duration_ms": 300,
        "scene_min_duration_multiplier": 1.5,
        "whisper.patience": 2.0,
        "whisper.suppress_blank": true,
        "whisper.condition_on_previous_text": false
      }
    },
    "balanced": {
      "description": "General purpose - balanced settings",
      "parameter_modifiers": {
        "temperature": [0.0, 0.2],
        "beam_size": 2,
        "best_of": 2,
        "no_speech_threshold": 0.6,
        "logprob_threshold": -1.0,
        "compression_ratio_threshold": 2.2,
        "length_penalty": 1.0,
        "vad_threshold_multiplier": 1.0,
        "min_speech_duration_ms": 200,
        "scene_min_duration_multiplier": 1.0,
        "whisper.patience": 1.5,
        "whisper.suppress_blank": true,
        "whisper.condition_on_previous_text": false
      }
    },
    "aggressive": {
      "description": "For clean dialog - captures more speech",
      "parameter_modifiers": {
        "temperature": [0.0, 0.4],
        "beam_size": 5,
        "best_of": 5,
        "no_speech_threshold": 0.4,
        "logprob_threshold": -1.5,
        "compression_ratio_threshold": 2.6,
        "length_penalty": 0.6,
        "vad_threshold_multiplier": 0.57,
        "min_speech_duration_ms": 100,
        "scene_min_duration_multiplier": 0.67,
        "whisper.patience": 1.0,
        "whisper.suppress_blank": false,
        "whisper.condition_on_previous_text": true
      }
    }
  },
  
  "pipelines": {
    "faster": {
      "description": "Fastest processing using Whisper Turbo",
      "workflow": {
        "steps": ["audio_extraction", "direct_transcription", "post_processing"],
        "model": "whisper-turbo",
        "backend": "stable-ts",
        "features": {
          "scene_detection": false,
          "vad": "none",
          "chunk_processing": false
        }
      },
      "model_overrides": {
        "translate": "whisper-large-v2"
      }
    },
    "fast": {
      "description": "Fast processing with scene detection",
      "workflow": {
        "steps": ["audio_extraction", "scene_detection", "chunk_transcription", "stitch", "post_processing"],
        "model": "whisper-large-v2",
        "backend": "stable-ts",
        "features": {
          "scene_detection": true,
          "vad": "none",
          "chunk_processing": true
        }
      }
    },
    "balanced": {
      "description": "Balanced processing with VAD enhancement",
      "workflow": {
        "steps": ["audio_extraction", "scene_detection", "vad_processing", "chunk_transcription", "stitch", "post_processing"],
        "model": "whisper-large-v2",
        "backend": "whisper",
        "features": {
          "scene_detection": true,
          "vad": "silero-v4",
          "chunk_processing": true
        }
      }
    }
  },
  
  "feature_configs": {
    "scene_detection": {
      "default": {
        "max_duration": 30.0,
        "min_duration": 0.2,
        "max_silence": 2.0,
        "energy_threshold": 50
      }
    },
    "post_processing": {
      "standard": {
        "remove_hallucinations": true,
        "remove_repetitions": true,
        "repetition_threshold": 2,
        "min_subtitle_duration": 0.5,
        "max_subtitle_duration": 7.0,
        "cps_slow_threshold": 6.0,
        "cps_fast_threshold": 60.22,
        "max_merge_gap_sec": 0.4,
        "save_original": true,
        "save_artifacts": true,
        "create_raw_subs_folder": true
      }
    },
    "stable_ts": {
      "default": {
        "regroup": true,
        "vad": true,
        "vad_threshold": 0.2,
        "no_repeat_ngram_size": 3,
        "repetition_penalty": 2.5
      }
    }
  },
  
  "defaults": {
    "language": "ja",
    "task": "transcribe",
    "device": "cuda",
    "compute_type": "float16",
    "output_format": "srt",
    "suppress_tokens": "",
    "initial_prompt": null,
    "prefix": null,
    "prepend_punctuations": "\\\"'¿([{-",
    "append_punctuations": "\\\"'.。,，!！?？:：\")]、"
  }
}